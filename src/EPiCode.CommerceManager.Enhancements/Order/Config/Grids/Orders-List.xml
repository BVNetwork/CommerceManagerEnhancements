<?xml version="1.0" encoding="utf-8" ?>
<View xmlns="http://schemas.mediachase.com/ecf/view">
    <ListViewUI>
        <Grid>
            <add>
                <Columns>
                    <Column columnType="CheckBox"/>
                    <Column width="80"
                            allowSorting="true"
                            dataField="OrderGroupId"
                            headingText="{SharedStrings:ID}"
                            columnType="CustomTemplate"
                            permissions="order:mng:view">
                        <Template id="LinkTemplate"
                                  controlUrl="GridTemplates/OrderLinkTemplate.ascx"></Template>
                    </Column>
                    <Column width="200"
                            allowSorting="true"
                            dataField="CustomerName"
                            headingText="{SharedStrings:Customer}"
                            columnType="CustomTemplate">
                        <Template id="CustomerTemplate"
                                  controlUrl="GridTemplates/OrderCustomerTemplate.ascx"></Template>
                    </Column>
                    <Column width="100"
                            allowSorting="true"
                            dataField="Total"
                            headingText="{SharedStrings:Total}"
                            columnType="Currency"
                            currencyCodeField="BillingCurrency"
                            align="Right"></Column>
                    <Column width="150"
                            allowSorting="true"
                            dataField="Status"
                            headingText="{SharedStrings:Status}"
                            Align="Center"
                            columnType="CustomTemplate">
                        <Template id="OrderStatusTemplate"
                                  controlUrl="GridTemplates/OrderStatusTemplate.ascx"></Template>
                    </Column>
                    <Column width="200"
                            columnType="DateTime"
                            allowSorting="true"
                            dataField="Created"
                            headingText="Created"></Column>       
                    <Column width="200"
                            columnType="DateTime"
                            allowSorting="false"
                            dataField="Modified"
                            headingText="{SharedStrings:Last_Modified}"></Column>
                    <Column width="200"                            
                            allowSorting="true"
                            dataField="MarketId"
                            headingText="Market"></Column>
                    <Column width="200"
                       allowSorting="false"
                       dataField="OrderNotes"
                       headingText="Latest Order Note"
                       Align="Left"
                       columnType="CustomTemplate">
                        <Template id="OrderNoteTemplate"
                                  controlUrl="GridTemplates/OrderNoteTemplate.ascx"></Template>
                    </Column>
                      <Column width="200"
               allowSorting="false"
               dataField="Shipping"
               headingText="Warehouse"
               Align="Left"
               columnType="CustomTemplate">
                          <Template id="WarehouseTemplate"
                                    controlUrl="GridTemplates/WarehouseTemplate.ascx"></Template>
                  </Column>
                    <Column width="200"
           allowSorting="false"
           dataField="ShippingMethod"
           headingText="Shipping"
           Align="Left"
           columnType="CustomTemplate">
                        <Template id="ShippingTemplate"
                                  controlUrl="GridTemplates/ShippingMethodTemplate.ascx"></Template>
                    </Column>
                </Columns>
            </add>
        </Grid>
        <Toolbar>
            <add>
                <Button id="NewOrderButton"
                        text="{OrderStrings:Order_New}"
                        imageUrl="~/Apps/Shell/styles/Images/new.png"
                        tooltip="{OrderStrings:Order_New}"
                        commandName="cmdPurchaseOrderNewSelect"
                        permissions="order:mng:create"/>
                <Button id="NewPaymentPlanButton"
                        text="{OrderStrings:PaymentPlan_New}"
                        imageUrl="~/Apps/Shell/styles/Images/new.png"
                        tooltip="{OrderStrings:PaymentPlan_New}"
                        commandName="cmdPaymentPlanNewSelect"
                        permissions="order:mng:create"/>
                <Button id="NewShoppingCartButton"
                        text="{OrderStrings:ShoppingCart_New}"
                        imageUrl="~/Apps/Shell/styles/Images/new.png"
                        tooltip="{OrderStrings:ShoppingCart_New}"
                        commandName="cmdShoppingCartNewSelect"
                        permissions="order:mng:create"/>
                <Button id="DeleteSelected"
                        text="{SharedStrings:Delete_Selected}"
                        imageUrl="~/Apps/Shell/styles/Images/toolbar/delete.gif"
                        commandName="cmdOrderDelete"
                        permissions="order:mng:delete"/>
            </add>
        </Toolbar>

        <Commands>
            <add>
                <Command id="cmdPermissionCheck">
                    <EnableHandler type="Mediachase.Commerce.Manager.CommandHandlers.PermissionEnableHandler, Mediachase.ConsoleManager" />
                </Command>
                <Command id="cmdPaymentPlanNew">
                    <CommandType>ClientAction</CommandType>
                    <ClientScript>CSOrderClient.NewPaymentPlan()</ClientScript>
                    <EnableHandler type="Mediachase.Commerce.Manager.CommandHandlers.PermissionEnableHandler, Mediachase.ConsoleManager" />
                </Command>
                <Command id="cmdShoppingCartNew">
                    <CommandType>ClientAction</CommandType>
                    <ClientScript>CSOrderClient.NewShoppingCart()</ClientScript>
                    <EnableHandler type="Mediachase.Commerce.Manager.CommandHandlers.PermissionEnableHandler, Mediachase.ConsoleManager" />
                </Command>
                <Command id="cmdOrderDelete">
                    <EnableHandler type="Mediachase.Commerce.Manager.CommandHandlers.CommonEnableHandler, Mediachase.ConsoleManager" />
                    <BeforeClientScript>Toolbar_GridHasItemsSelected</BeforeClientScript>
                    <ConfirmationText>{CommerceManager:DeleteSelectedItemsConfirmation}</ConfirmationText>
                    <CommandType>ServerAction</CommandType>
                    <Handler type="Mediachase.Commerce.Manager.Order.CommandHandlers.OrderDeleteHandler, Mediachase.ConsoleManager" />
                    <UpdatePanelIds>panelMainListView</UpdatePanelIds>
                    <EnableHandler type="Mediachase.Commerce.Manager.CommandHandlers.PermissionEnableHandler, Mediachase.ConsoleManager" />
                </Command>
                <Command id="cmdNavigate">
                    <CommandType>ServerAction</CommandType>
                    <Handler type="ConsoleManagerEx.Apps.Order.Handlers.DeleteHandler, ConsoleManagerEx"></Handler>
                </Command>
                <Command id="cmdDelete">
                    <CommandType>ServerAction</CommandType>
                    <ConfirmationText>Pseudo-Delete confirmation?</ConfirmationText>
                    <Handler type="ConsoleManagerEx.Apps.Order.Handlers.DeleteHandler, ConsoleManagerEx"></Handler>
                </Command>
                <Command id="cmdComplete">
                    <CommandType>ServerAction</CommandType>
                    <Handler type="ConsoleManagerEx.Apps.Order.Handlers.CompleteHandler, ConsoleManagerEx"></Handler>
                </Command>

                <Command id="cmdPurchaseOrderNewServer">
                    <CommandType>ServerAction</CommandType>
                    <Handler type="Mediachase.Commerce.Manager.Apps.Order.CommandHandlers.OrderCreateRedirectHandler, Mediachase.ConsoleManager" />
                </Command>
                <Command id="cmdPurchaseOrderNewSelect">
                    <CommandType>OpenFrameModalPopup</CommandType>
                    <PopupTitle>{OrderStrings:Order_New}</PopupTitle>
                    <Url>~/Apps/Core/Controls/DialogPage.aspx?_a=Customer&amp;_v=OpenFrameXmlFormBuilderView&amp;CommandClassName=Contact&amp;CommandViewName=EntityView&amp;CommandPlaceName=&amp;CommandName=cmdPurchaseOrderNewSelect&amp;LayoutClassName=SelectCustomerSite&amp;LayoutPlaceName=&amp;ReturnCommandName=cmdPurchaseOrderNewServer</Url>
                    <Width>580</Width>
                    <Height>380</Height>
                    <Top>15</Top>
                    <Drag>True</Drag>
                    <EnableHandler type="Mediachase.Commerce.Manager.CommandHandlers.PermissionEnableHandler, Mediachase.ConsoleManager" />
                    <DependCommand>cmdPurchaseOrderNewServer</DependCommand>
                </Command>
                <Command id="cmdPaymentPlanNewSelect">
                    <CommandType>OpenFrameModalPopup</CommandType>
                    <PopupTitle>{OrderStrings:PaymentPlan_New}</PopupTitle>
                    <Url>~/Apps/Core/Controls/DialogPage.aspx?_a=Customer&amp;_v=OpenFrameXmlFormBuilderView&amp;CommandClassName=Contact&amp;CommandViewName=EntityView&amp;CommandPlaceName=&amp;CommandName=cmdPaymentPlanNewSelect&amp;LayoutClassName=SelectCustomerSite&amp;LayoutPlaceName=&amp;ReturnCommandName=cmdPurchaseOrderNewServer&amp;Class=PaymentPlan</Url>
                    <Width>580</Width>
                    <Height>380</Height>
                    <Top>15</Top>
                    <Drag>True</Drag>
                    <EnableHandler type="Mediachase.Commerce.Manager.CommandHandlers.PermissionEnableHandler, Mediachase.ConsoleManager" />
                    <DependCommand>cmdPurchaseOrderNewServer</DependCommand>
                </Command>
                <Command id="cmdShoppingCartNewSelect">
                    <CommandType>OpenFrameModalPopup</CommandType>
                    <PopupTitle>{OrderStrings:ShoppingCart_New}</PopupTitle>
                    <Url>~/Apps/Core/Controls/DialogPage.aspx?_a=Customer&amp;_v=OpenFrameXmlFormBuilderView&amp;CommandClassName=Contact&amp;CommandViewName=EntityView&amp;CommandPlaceName=&amp;CommandName=cmdShoppingCartNewSelect&amp;LayoutClassName=SelectCustomerSite&amp;LayoutPlaceName=&amp;ReturnCommandName=cmdPurchaseOrderNewServer&amp;Class=ShoppingCart</Url>
                    <Width>580</Width>
                    <Height>380</Height>
                    <Top>15</Top>
                    <Drag>True</Drag>
                    <EnableHandler type="Mediachase.Commerce.Manager.CommandHandlers.PermissionEnableHandler, Mediachase.ConsoleManager" />
                    <DependCommand>cmdPurchaseOrderNewServer</DependCommand>
                </Command>
            </add>
        </Commands>
    </ListViewUI>
    <ViewConfig>
        <setAttributes id="Orders-List"
                       isNameDynamic="true"
                       controlUrl="Order/OrderList.ascx"
                       permissions="order:mng:view"
                       help="Order+Management"></setAttributes>
    </ViewConfig>
</View>